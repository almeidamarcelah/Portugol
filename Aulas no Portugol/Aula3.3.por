programa
{
	
	funcao inicio()
	{
		inteiro x=1,tabuada,resultado

		escreva("\nPor favor, digite a sua tabuada: ")
		leia(tabuada)

		faca
		{
			resultado = tabuada * x
			escreva("\n",tabuada," X ",x," = ",resultado)
			x++ //depois de montar a primeira linha para continuar
		}
		enquanto(x<=10)
	}
}
